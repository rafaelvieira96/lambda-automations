{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DocDBListAndDescribe",
      "Effect": "Allow",
      "Action": [
        "docdb:DescribeDBClusters",
        "docdb:ListTagsForResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DocDBStop",
      "Effect": "Allow",
      "Action": "docdb:StopDBCluster",
      "Resource": "*"
    },
    {
      "Sid": "Logs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    }
  ]
}
